{
    "type": "origins:action_over_time",
    "interval": 1,
    "rising_action": {
        "type": "origins:replace_inventory",
        "inventory_type": "power",
        "power": "origins:pockets",
        "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
                "item": "minecraft:glass_bottle"
            }
        },
        "stack": {
            "item": "minecraft:potion",
            "tag": "{Potion: \"minecraft:water\"}"
        }
    },
    "condition": {
        "type": "origins:in_block",
        "block_condition": {
            "type": "origins:fluid",
            "fluid_condition": {
                "type": "origins:in_tag",
                "tag": "minecraft:water"
            }
        }
    }
}